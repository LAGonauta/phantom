    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug executable 'phantom'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "run",
                    "--bin=phantom",
                ]
            },
            "args": [
                    "--server",
                    "10.0.0.64:19134",
            ],
            "env": {
                "RUST_LOG": "trace"
            }
        },
        {
            "name": "Debug unit tests in executable 'phantom'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--bin=phantom"
                ]
            }
        }
    ]
}